{
    "root": true,
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["standard-jsx", "standard-react"],
    "plugins": ["react", "react-hooks"],
    "rules": {
        "react/jsx-indent": "off",
        "react/jsx-indent-props": "off",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "error"
    },
    "globals": {
        "require": "readonly",
        "module": "readonly"
    }
}
